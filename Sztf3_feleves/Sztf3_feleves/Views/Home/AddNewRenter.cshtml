@model string

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>AddNewRenter</title>
    <link href="https://fonts.googleapis.com/css?family=Lato" rel="stylesheet">
    <link href="~/navbar.css" rel="stylesheet" />
    <link href="~/form.css" rel="stylesheet" />
</head>
<body>
    <div class="navbar">
        <div class="right-side">
            <div class="brand">
                <div>CAR RENTING SERVICE</div>
            </div>
        </div>

        <div class="left-side">
            <div class="nav-link-wrapper">
                <a href="/">Home</a>
            </div>

            <div class="nav-link-wrapper active-nav-link">
                <a href="/Home/AddNewSalon">Add</a>
            </div>

            <div class="nav-link-wrapper">
                <a href="/Home/List">List</a>
            </div>

            <div class="nav-link-wrapper">
                <a href="/Home/Statistics">Stats</a>
            </div>
        </div>
    </div>

    <div class="pricing-box-container">
        <div class="pricing-box text-center">
            <h1>ADD NEW RENTER</h1>
            <form action="/Home/AddNewRenter" method="post">
                <p>Name</p>
                <input type="text" name="Name" required class="input"/> <br />
                <p>Postal Code</p>
                <input type="text" name="PostalCode" required class="input"/> <br />
                <p>City</p>
                <input type="text" name="City" required class="input"/> <br />
                <p>Address</p>
                <input type="text" name="Address" required class="input"/> <br />
                <p>Email</p>
                <input type="email" name="Email" required class="input"/> <br />
                <p>Phone Number</p>
                <input type="text" name="PhoneNumber" required class="input"/> <br />
                <p>Rented Days</p>
                <input type="number" min="1" name="RentedDays" required class="input"/> <br />

                <input type="hidden" name="CarId" value="@Model" />
                <input type="submit" value="Add Renter" class="btn-primary" />
            </form>
        </div>
    </div>
</body>
</html>
