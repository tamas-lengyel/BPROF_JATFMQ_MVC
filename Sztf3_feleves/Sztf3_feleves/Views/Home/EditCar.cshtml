@using Models
@model Cars

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Edit Car</title>
</head>
<body>
    <div class="navbar">
        <div class="right-side">
            <div class="brand">
                <div>CAR RENTING SERVICE</div>
            </div>
        </div>

        <div class="left-side">
            <div class="nav-link-wrapper">
                <a href="/">Home</a>
            </div>

            <div class="nav-link-wrapper">
                <a href="/Home/AddNewSalon">Add</a>
            </div>

            <div class="nav-link-wrapper">
                <a href="/Home/List">List</a>
            </div>

            <div class="nav-link-wrapper">
                <a href="/Home/Statistics">Stats</a>
            </div>
        </div>
    </div>

    <form action="/Home/EditCar" method="post">
        Make:
        <input type="text" name="Make" value="@Model.Make" required /> <br />
        Model:
        <input type="text" name="Model" value="@Model.Model" required /> <br />
        Model Year:
        <input type="number" name="ModelYear" max="2021" value="@Model.ModelYear" required /> <br />
        Body Type: <label>@Model.BodyType</label>
        <select name="BodyType" required>
            <option hidden disabled selected value> -- select an option -- </option>
            <option value="Hatchback">Hatchback</option>
            <option value="Sedan">Sedan</option>
            <option value="Suv">SUV</option>
            <option value="Coupe">Coupe</option>
            <option value="Van">Van</option>
            <option value="Wagon">Wagon</option>
        </select> <br />
        Combined Fuel Economy:
        <input type="number" name="CombFuelEco" step="0.1" value="@Model.CombFuelEco" required /> <br />
        Price Per Day:
        <input type="number" name="PricePerDay" value="@Model.PricePerDay" required /> <br />

        @if (Model.Available)
        {
            <input type="checkbox" class="form-check-input" value="true" name="Available" checked hidden /><br />
        }
        else
        {
            <input type="checkbox" class="form-check-input" value="true" name="Available" hidden /><br />
        }

        <input type="hidden" name="Available" value="@Model.Available" />
        <input type="hidden" name="CarId" value="@Model.CarId" />
        <input type="hidden" name="SalonId" value="@Model.SalonId" />

        <input type="submit" value="Edit Car" />
    </form>
</body>
</html>